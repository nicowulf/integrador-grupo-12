<% include ../partials/head %>

    <body>
        <% include ../partials/header %>

            <div class="form-wrap">
                <div class="form login-form">
                    <h1>iniciar sesion</h1>
                    <form method="POST" action='/users/login' class="login-form">
                        <div class = "errors">
                                <ul></ul>
                            </div>
                        <div class="input-wrap">
                            <input type="text" placeholder="E-mail" name="email" id="email">
                            <% if (locals.errors && errors.email) { %>
                                <div class='text-danger'>
                                    <%= errors.email.msg %>
                                </div>
                            <% } %>
                        </div>
                        <div class="input-wrap">
                            <input type="password" placeholder="Contraseña" name="password" id="password">
                        </div>
                        <div class="input-wrap login">
                            <button type="submit">Iniciar Sesion</button>
                            <input type="checkbox" name="remember_user">
                            <p>Recordarme</p>
                        </div>
                        <div class="form-botton">
                            <div class="input-wrap">
                                <a href="">¿Olvidaste tu Contraseña?</a>
                            </div>
                            <div class="input-wrap">
                                <p>No tienes cuenta, registrate <a href="/users/register">aqui</a></p>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/validatorjs/2.0.0/validator.min.js"></script>
            <script src='/javascript/validationLogin.js'></script>
            <% include ../partials/footer %>
    </body>

