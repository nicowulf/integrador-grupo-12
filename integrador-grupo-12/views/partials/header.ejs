<header class="header">
  <div class="overlay has-fade"></div>
  <nav class="flex flex-jc-sb flex-ai-c">
    <a href="/" class="header__logo">
      <img alt="">
    </a>

    <a href="#" id="btnHamburger" class="header__hamburger hide-for-desktop">
      <span></span>
      <span></span>
      <span></span>
    </a>


    <div class="header__links hide-for-mobile">
      <a href="/products">TIENDA</a>
      <a href="/products/national">NACIONALES</a>
      <a href="/products/international">INTERNACIONALES</a>
      <a href="/products/styles">VARIEDADES</a>
      <a href="/products/brands">MARCAS</a>
    </div>

    <div class="header__menu has-fade">
      <a href="/products">TIENDA</a>
      <a href="/products/national">NACIONALES</a>
      <a href="/products/international">INTERNACIONALES</a>
      <a href="/products/styles">VARIEDADES</a>
      <a href="/products/brands">MARCAS</a>
      <% if (locals.isLogged && locals.userLogged.role_id === 1) { %>
      <a href="/admin">ADMINISTRAR</a>
      <br>
      <a href="/products/productCart">CARRITO</a>
      <% } else { %>
      <a href="/users/register">REGISTRO</a>
        <a href="/users/login">LOGIN</a>
        <a href="/products/productCart">CARRITO</a>
      <% } %>
      

    </div>

    <div class="header__button hide-for-mobile">
      <% if (locals.isLogged) { %>


        <a class="nav-link dropdown-toggle" href="/users/profile/<%= locals.userLogged.id %>" id="dropUser" role="button" data-bs-toggle="dropdown"
          aria-expanded="false">
          <img src="/images/usuarios/<%= locals.userLogged.avatar %>" width="40" style="border-radius: 100%;">
          Hola <%= locals.userLogged.first_name %>
        </a>
        <a href="/admin" class="button">ADMINISTRAR</a>
        <a href="/products/productCart" class="button">CARRITO</a>


        <% } else { %>
          <a href="/users/register" class="button">REGISTRO</a>
          <a href="/users/login" class="button">LOGIN</a>
          <a href="/products/productCart" class="button">CARRITO</a>
          <% } %>
    </div>
  </nav>
</header>